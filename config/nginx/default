server {
	listen 80;
	listen [::]:80;

    server_name _;

    root /var/www/html;

    index index.html index.php;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass 127.0.0.1:9000;
     }

    location ~ /\.ht {
        deny all;
    }

}
